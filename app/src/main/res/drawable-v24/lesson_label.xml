<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <!-- 这里是设置为四周 也可以单独设置某个位置为圆角-->
    <corners android:radius="10dp"/>
    <padding
        android:left="@dimen/event_label_padding_horizontal"
        android:right="@dimen/event_label_padding_horizontal"
        android:top="@dimen/event_label_padding_top">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lesson_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:text="数学分析(B2)"
                android:textColor="@color/blue_label_text"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/lesson_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="王建伟"
                android:textColor="@color/normal"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </padding>
    <solid android:color="@color/blue_label_bg" />
    <stroke android:width="1dp"
        android:color="@color/blue_label_line" />
    <!--虚线: android:dashGap="5dp", 虚线宽度: android:dashWidth="3dp"-->
</shape>